<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="flex items-start justify-between mb-8">
    <div class="flex-1 min-w-0">
      <div class="flex items-center space-x-3 mb-4">
        <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
            <%= @collection.name %>
          </h1>
          <div class="flex items-center space-x-3 mt-2">
            <span class="inline-flex items-center px-2 py-1 rounded text-sm font-medium <%= @collection.public? ? 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400' %>">
              <%= @collection.public? ? 'Public' : 'Private' %>
            </span>
            <span class="text-sm text-gray-600 dark:text-gray-400">
              <%= pluralize(@collection.snippets.count, 'snippet') %>
            </span>
          </div>
        </div>
      </div>
      
      <% if @collection.description.present? %>
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
          <%= simple_format(@collection.description) %>
        </p>
      <% end %>
    </div>
    
    <% if @collection.user == current_user %>
      <div class="flex items-center space-x-2 ml-4">
        <!-- Add Snippet to Collection -->
        <div class="relative" data-controller="dropdown">
          <button data-action="click->dropdown#toggle" class="inline-flex items-center px-3 py-2 bg-blue-600 dark:bg-blue-500 text-white rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Snippet
          </button>
          
          <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-64 bg-white dark:bg-gray-800 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-50">
            <div class="py-1">
              <%= link_to new_snippet_path(collection_id: @collection.id), class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Create New Snippet
              <% end %>
              <div class="border-t border-gray-100 dark:border-gray-700 my-1"></div>
              <div class="px-4 py-2 text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                Add Existing Snippets
              </div>
              <% current_user.snippets.where.not(id: @collection.snippet_ids).limit(5).each do |snippet| %>
                <%= link_to collection_collection_snippets_path(@collection), method: :post, params: { snippet_id: snippet.id }, data: { "turbo-method": :post }, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
                  <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                  </svg>
                  <div class="flex-1 min-w-0">
                    <div class="truncate"><%= snippet.title %></div>
                    <div class="text-xs text-gray-500"><%= snippet.language %></div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- Edit Collection -->
        <%= link_to edit_collection_path(@collection), class: "inline-flex items-center px-3 py-2 bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>
        
        <!-- More Actions -->
        <div class="relative" data-controller="dropdown">
          <button data-action="click->dropdown#toggle" class="p-2 rounded-md text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
            </svg>
          </button>
          
          <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-50">
            <div class="py-1">
              <%= link_to collection_path(@collection, format: :json), class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700", target: "_blank" do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2v0a2 2 0 01-2-2v-5H8z"></path>
                </svg>
                Export as JSON
              <% end %>
              <%= link_to collection_path(@collection), method: :delete, data: { "turbo-method": :delete, confirm: "Are you sure you want to delete this collection and remove all snippets from it?" }, class: "flex items-center px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20" do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Collection
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Snippets Grid -->
  <% if @collection.snippets.any? %>
    <div class="space-y-4">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-6">
        Snippets in this collection
      </h2>
      
      <div class="space-y-4">
        <% @collection.snippets.includes(:user, :tags).each do |snippet| %>
          <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 hover:shadow-md dark:hover:shadow-gray-800/20 transition-all">
            <div class="p-6">
              <div class="flex items-start justify-between">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center space-x-3 mb-2">
                    <%= link_to snippet, class: "text-lg font-semibold text-gray-900 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors" do %>
                      <%= snippet.title %>
                    <% end %>
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-300">
                      <%= snippet.language %>
                    </span>
                    <% if snippet.public? %>
                      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400">
                        Public
                      </span>
                    <% end %>
                  </div>
                  
                  <% if snippet.description.present? %>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">
                      <%= snippet.description %>
                    </p>
                  <% end %>
                  
                  <!-- Tags -->
                  <% if snippet.tags.any? %>
                    <div class="flex flex-wrap gap-1 mb-3">
                      <% snippet.tags.limit(3).each do |tag| %>
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium" style="background-color: <%= tag.color %>20; color: <%= tag.color %>;">
                          <%= tag.name %>
                        </span>
                      <% end %>
                      <% if snippet.tags.count > 3 %>
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400">
                          +<%= snippet.tags.count - 3 %> more
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                  
                  <!-- Code Preview -->
                  <div class="bg-gray-50 dark:bg-gray-800 rounded-md p-3 mt-3">
                    <pre class="text-sm text-gray-700 dark:text-gray-300 overflow-hidden" style="white-space: pre-wrap; word-wrap: break-word; max-height: 100px; overflow-y: hidden;"><%= snippet.code.lines.first(4).join.strip %><% if snippet.code.lines.count > 4 %>

...</<% end %></pre>
                  </div>
                </div>
                
                <div class="flex items-center space-x-2 ml-4">
                  <%= link_to snippet, class: "inline-flex items-center px-3 py-1.5 text-sm bg-blue-600 dark:bg-blue-500 text-white rounded-md hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors" do %>
                    View
                  <% end %>
                  
                  <% if @collection.user == current_user %>
                    <%= link_to collection_collection_snippet_path(@collection, snippet), method: :delete, data: { "turbo-method": :delete, confirm: "Remove this snippet from the collection?" }, class: "inline-flex items-center px-2 py-1.5 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-md transition-colors", title: "Remove from collection" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </div>
              
              <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400 mt-4 pt-4 border-t border-gray-100 dark:border-gray-800">
                <div class="flex items-center space-x-3">
                  <span>by <%= snippet.user.name || snippet.user.username || snippet.user.email.split('@').first %></span>
                  <span>•</span>
                  <span><%= time_ago_in_words(snippet.created_at) %> ago</span>
                </div>
                <div class="text-gray-400 dark:text-gray-500">
                  <%= snippet.code.length %> chars
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-16">
      <div class="w-24 h-24 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">No snippets in this collection</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-6">Get started by adding some code snippets to organize your work.</p>
      
      <% if @collection.user == current_user %>
        <div class="flex justify-center space-x-3">
          <%= link_to new_snippet_path(collection_id: @collection.id), class: "inline-flex items-center px-4 py-2 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Create New Snippet
          <% end %>
          
          <%= link_to snippets_path, class: "inline-flex items-center px-4 py-2 bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium rounded-lg hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors" do %>
            Browse Existing Snippets
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Back to Collections -->
  <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800">
    <div class="flex items-center justify-between">
      <div class="text-sm text-gray-500 dark:text-gray-400">
        Collection created <%= @collection.created_at.strftime("%B %d, %Y") %>
        <% if @collection.updated_at != @collection.created_at %>
          • Updated <%= time_ago_in_words(@collection.updated_at) %> ago
        <% end %>
      </div>
      
      <%= link_to collections_path, class: "inline-flex items-center text-sm text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Collections
      <% end %>
    </div>
  </div>
</div>