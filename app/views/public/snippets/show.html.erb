<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="flex items-start justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
        <%= @snippet.title %>
      </h1>
      <div class="flex items-center space-x-4 text-sm text-gray-600 dark:text-gray-400">
        <span class="inline-flex items-center px-2 py-1 rounded bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-300 font-medium">
          <%= @snippet.language %>
        </span>
        <span class="inline-flex items-center px-2 py-1 rounded font-medium bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400">
          Public
        </span>
        <span>Created <%= time_ago_in_words(@snippet.created_at) %> ago</span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          <%= @snippet.view_count %> views
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <%= @snippet.copy_count %> copies
        </span>
      </div>
    </div>
    
    <div class="flex items-center space-x-2 ml-4" data-controller="code-share">
      <!-- Copy Code Button -->
      <button data-controller="clipboard" data-clipboard-text="<%= @snippet.code %>" data-action="click->clipboard#copy" class="inline-flex items-center px-3 py-2 bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
        </svg>
        Copy Code
      </button>
      
      <!-- Copy as Image Button -->
      <button data-action="click->code-share#copyAsImage" class="inline-flex items-center px-3 py-2 bg-blue-600 dark:bg-blue-500 text-white rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Copy as Image
      </button>

      <!-- Share Menu Dropdown -->
      <div class="relative" data-controller="dropdown">
        <button data-action="click->dropdown#toggle" class="inline-flex items-center px-3 py-2 bg-green-600 dark:bg-green-500 text-white rounded-lg hover:bg-green-700 dark:hover:bg-green-600 transition-colors">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m9.632 4.684C18.886 14.938 19 14.482 19 14c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684M5.316 13.342A3 3 0 004 12c0-.482.114-.938.316-1.342m0 2.684a3 3 0 010-2.684m9.632 4.684c.202.404.316.86.316 1.342 0 .482-.114.938-.316 1.342m0-2.684a3 3 0 110 2.684"></path>
          </svg>
          Share
        </button>
        
        <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-50">
          <div class="py-1">
            <button data-action="click->code-share#copyForSocial" class="flex items-center w-full px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m0 0V1a1 1 0 011-1h2a1 1 0 011 1v18a1 1 0 01-1 1H4a1 1 0 01-1-1V1a1 1 0 011-1h2a1 1 0 011 1v3z"></path>
              </svg>
              Copy for Social Media
            </button>
            <button data-action="click->code-share#copyAsMarkdown" class="flex items-center w-full px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Copy as Markdown
            </button>
            <button data-controller="clipboard" data-clipboard-text="<%= request.original_url %>" data-action="click->clipboard#copy" class="flex items-center w-full px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
              </svg>
              Copy Link
            </button>
          </div>
        </div>
      </div>
      
      <!-- Star Button -->
      <% if user_signed_in? %>
        <% if @snippet.starred_by?(current_user) %>
          <%= link_to public_snippet_unstar_path(@snippet), method: :delete, data: { "turbo-method": :delete }, class: "inline-flex items-center px-3 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors" do %>
            <svg class="w-4 h-4 mr-1 fill-current" viewBox="0 0 24 24">
              <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
            </svg>
            <span class="text-xs"><%= @snippet.stars_count %></span>
          <% end %>
        <% else %>
          <%= link_to public_snippet_star_path(@snippet), method: :post, data: { "turbo-method": :post }, class: "inline-flex items-center px-3 py-2 bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
            <span class="text-xs"><%= @snippet.stars_count %></span>
          <% end %>
        <% end %>
      <% end %>
      
      <%= link_to feed_path, class: "inline-flex items-center px-3 py-2 bg-gray-600 dark:bg-gray-700 text-white rounded-lg hover:bg-gray-700 dark:hover:bg-gray-600 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Feed
      <% end %>
      
      <!-- Hidden elements for code-share controller -->
      <div style="display: none;">
        <div data-code-share-target="title"><%= @snippet.title %></div>
        <div data-code-share-target="language"><%= @snippet.language %></div>
        <div data-code-share-target="codeBlock"><%= @snippet.code %></div>
      </div>
    </div>
  </div>

  <!-- Author Info -->
  <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6 mb-6">
    <div class="flex items-center">
      <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-lg mr-4">
        <%= @snippet.user.username[0].upcase %>
      </div>
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white">
          <%= @snippet.user.name || @snippet.user.username %>
        </h3>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          @<%= @snippet.user.username %>
        </p>
        <% if @snippet.user.bio.present? %>
          <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">
            <%= @snippet.user.bio %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Description -->
  <% if @snippet.description.present? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6 mb-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Description</h3>
      <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
        <%= simple_format(@snippet.description) %>
      </p>
    </div>
  <% end %>

  <!-- Tags -->
  <% if @snippet.tags.any? %>
    <div class="flex flex-wrap gap-2 mb-6">
      <% @snippet.tags.each do |tag| %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium" style="background-color: <%= tag.color %>20; color: <%= tag.color %>;">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
          </svg>
          <%= tag.name %>
        </span>
      <% end %>
    </div>
  <% end %>

  <!-- Code Block -->
  <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden mb-8">
    <div class="flex items-center justify-between px-6 py-3 bg-gray-50 dark:bg-gray-700 border-b border-gray-200 dark:border-gray-600">
      <div class="flex items-center space-x-3">
        <div class="flex space-x-1">
          <div class="w-3 h-3 bg-red-400 rounded-full"></div>
          <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
          <div class="w-3 h-3 bg-green-400 rounded-full"></div>
        </div>
        <span class="text-sm font-mono text-gray-600 dark:text-gray-300">
          <%= @snippet.title.parameterize %>.<%= @snippet.language == 'javascript' ? 'js' : @snippet.language %>
        </span>
      </div>
      <button data-controller="clipboard" data-clipboard-text="<%= @snippet.code %>" data-action="click->clipboard#copy" class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 flex items-center space-x-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
        </svg>
        <span>Copy</span>
      </button>
    </div>
    
    <%= syntax_highlighted_code(@snippet.code, @snippet.language) %>
  </div>

  <!-- Comments Section -->
  <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        Comments (<%= @snippet.comments.count %>)
      </h3>
    </div>

    <!-- Comment Form -->
    <% if user_signed_in? %>
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/30">
        <%= form_with model: [@snippet, Comment.new], url: public_snippet_comments_path(@snippet), local: true do |form| %>
          <div class="flex space-x-3">
            <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-sm flex-shrink-0">
              <%= current_user.username[0].upcase %>
            </div>
            <div class="flex-1">
              <%= form.text_area :content, 
                  placeholder: "Add a comment...", 
                  rows: 3,
                  class: "w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg 
                         bg-white dark:bg-gray-800 text-gray-900 dark:text-white 
                         focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none" %>
              <div class="flex justify-end mt-3">
                <%= form.submit "Post Comment", 
                    class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 
                           transition-colors text-sm font-medium" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/30">
        <div class="text-center">
          <p class="text-gray-600 dark:text-gray-400 mb-3">
            <%= link_to "Sign in", new_user_session_path, class: "text-blue-600 dark:text-blue-400 hover:underline" %> 
            to join the conversation
          </p>
        </div>
      </div>
    <% end %>

    <!-- Comments List -->
    <div class="divide-y divide-gray-200 dark:divide-gray-700">
      <% if @snippet.comments.any? %>
        <% @snippet.comments.recent.each do |comment| %>
          <div class="px-6 py-4">
            <div class="flex space-x-3">
              <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-sm flex-shrink-0">
                <%= comment.user.username[0].upcase %>
              </div>
              <div class="flex-1">
                <div class="flex items-center space-x-2 mb-1">
                  <span class="font-semibold text-gray-900 dark:text-white text-sm">
                    <%= comment.user.username %>
                  </span>
                  <span class="text-gray-500 dark:text-gray-400 text-xs">
                    <%= time_ago_in_words(comment.created_at) %> ago
                  </span>
                </div>
                <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed">
                  <%= simple_format(comment.content) %>
                </p>
                <% if user_signed_in? && comment.can_be_deleted_by?(current_user) %>
                  <div class="mt-2">
                    <%= link_to public_snippet_comment_path(@snippet, comment), 
                        method: :delete, 
                        data: { 
                          "turbo-method": :delete,
                          confirm: "Are you sure you want to delete this comment?" 
                        },
                        class: "text-red-600 dark:text-red-400 hover:text-red-700 dark:hover:text-red-300 text-xs" do %>
                      Delete
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="px-6 py-8 text-center">
          <svg class="w-8 h-8 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <p class="text-gray-500 dark:text-gray-400 text-sm">No comments yet. Be the first to comment!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>