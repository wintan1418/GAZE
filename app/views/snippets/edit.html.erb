<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">Edit Snippet</h1>
    <p class="text-gray-600 dark:text-gray-400">Update your code snippet.</p>
  </div>

  <%= form_with model: @snippet, local: true, class: "space-y-6" do |form| %>
    <% if @snippet.errors.any? %>
      <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
        <div class="flex">
          <svg class="w-5 h-5 text-red-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h3 class="text-sm font-medium text-red-800 dark:text-red-200 mb-1">
              <%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:
            </h3>
            <ul class="text-sm text-red-700 dark:text-red-300 list-disc list-inside space-y-1">
              <% @snippet.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <!-- Title -->
        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.text_field :title, 
              placeholder: "Enter snippet title...", 
              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Language -->
        <div>
          <%= form.label :language, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.select :language, 
              language_options_for_select, 
              { prompt: "Select language..." }, 
              { 
                class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                data: { code_editor_target: "language" }
              } %>
        </div>
      </div>

      <!-- Description -->
      <div class="mb-6">
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= form.text_area :description, 
            placeholder: "Optional description of your snippet...", 
            rows: 3,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Tags -->
      <div class="mb-6">
        <%= form.label :tag_names, "Tags", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= text_field_tag 'snippet[tag_names]', 
            @snippet.tags.map(&:name).join(', '), 
            placeholder: "Enter tags separated by commas (e.g., javascript, react, hooks)", 
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            data: { controller: "tag-input" } %>
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
          Separate multiple tags with commas. Tags help organize and find your snippets.
        </p>
      </div>

      <!-- Visibility -->
      <div class="mb-6">
        <span class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Visibility</span>
        <div class="space-y-2">
          <div class="flex items-center">
            <%= form.radio_button :visibility, :private_snippet, 
                class: "w-4 h-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600" %>
            <%= form.label :visibility_private_snippet, class: "ml-3 block text-sm text-gray-700 dark:text-gray-300" do %>
              <span class="font-medium">Private</span>
              <span class="block text-gray-500 dark:text-gray-400 text-xs">Only you can see this snippet</span>
            <% end %>
          </div>
          <div class="flex items-center">
            <%= form.radio_button :visibility, :public_snippet, 
                class: "w-4 h-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600" %>
            <%= form.label :visibility_public_snippet, class: "ml-3 block text-sm text-gray-700 dark:text-gray-300" do %>
              <span class="font-medium">Public</span>
              <span class="block text-gray-500 dark:text-gray-400 text-xs">Anyone can view this snippet</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Real CodeMirror IDE -->
    <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 overflow-hidden" data-controller="code-editor">
      <div class="px-6 py-4 bg-gray-50 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="flex space-x-1">
              <div class="w-3 h-3 bg-red-400 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
              <div class="w-3 h-3 bg-green-400 rounded-full"></div>
            </div>
            <%= form.label :code, "Professional Code Editor", class: "text-sm font-medium text-gray-700 dark:text-gray-300" %>
          </div>
          <div class="text-xs text-gray-500 dark:text-gray-400 flex items-center space-x-4">
            <span>ðŸŽ¯ Real IDE Experience</span>
            <span>Auto-complete</span>
            <span>Bracket matching</span>
            <span>Live syntax</span>
          </div>
        </div>
      </div>
      
      <!-- Hidden textarea for form submission -->
      <%= form.text_area :code, 
          class: "hidden",
          data: { code_editor_target: "textarea" } %>
      
      <!-- CodeMirror container -->
      <div data-code-editor-target="container" class="codemirror-container"></div>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center justify-between pt-6">
      <div class="flex items-center space-x-3">
        <%= link_to @snippet, class: "inline-flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Cancel
        <% end %>
        <%= link_to @snippet, method: :delete, data: { "turbo-method": :delete, confirm: "Are you sure you want to delete this snippet?" }, class: "inline-flex items-center px-4 py-2 text-red-600 dark:text-red-400 bg-white dark:bg-gray-800 border border-red-300 dark:border-red-700 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
      
      <div class="flex items-center space-x-3">
        <%= form.submit "Update Snippet", 
            class: "inline-flex items-center px-6 py-2 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors" %>
      </div>
    </div>
  <% end %>
</div>