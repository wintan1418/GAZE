<div class="max-w-6xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">Your Snippets</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-2">Manage and organize your code snippets</p>
    </div>
    <%= link_to new_snippet_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      New Snippet
    <% end %>
  </div>

  <!-- Search Bar -->
  <div class="mb-6">
    <%= form_with url: search_snippets_path, method: :get, local: true, class: "flex" do |form| %>
      <div class="flex-1 relative">
        <%= form.text_field :q, 
            value: params[:q], 
            placeholder: "Search your snippets...", 
            class: "w-full pl-10 pr-4 py-2 border border-gray-300 dark:border-gray-700 rounded-l-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <svg class="absolute left-3 top-2.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <%= form.submit "Search", class: "px-6 py-2 bg-gray-600 dark:bg-gray-700 text-white rounded-r-lg hover:bg-gray-700 dark:hover:bg-gray-600 transition-colors" %>
    <% end %>
  </div>

  <% if @snippets.any? %>
    <!-- Snippets Grid -->
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 mb-8">
      <% @snippets.each do |snippet| %>
        <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 hover:shadow-md transition-shadow">
          <div class="p-6">
            <!-- Header -->
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1 min-w-0">
                <%= link_to snippet_path(snippet), class: "text-lg font-semibold text-gray-900 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors truncate block" do %>
                  <%= snippet.title %>
                <% end %>
                <div class="flex items-center space-x-2 mt-1">
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-300">
                    <%= snippet.language %>
                  </span>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= snippet.public? ? 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400' %>">
                    <%= snippet.public? ? 'Public' : 'Private' %>
                  </span>
                </div>
              </div>
              
              <!-- Actions Dropdown -->
              <div class="relative ml-4" data-controller="dropdown">
                <button data-action="click->dropdown#toggle" class="p-1 rounded-md text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                  </svg>
                </button>
                
                <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-50">
                  <div class="py-1">
                    <%= link_to snippet_path(snippet), class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
                      <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                      View
                    <% end %>
                    <%= link_to edit_snippet_path(snippet), class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
                      <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                      Edit
                    <% end %>
                    <%= link_to toggle_visibility_snippet_path(snippet), method: :patch, data: { "turbo-method": :patch }, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
                      <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= snippet.public? ? 'M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21' : 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z' %>"></path>
                      </svg>
                      Make <%= snippet.public? ? 'Private' : 'Public' %>
                    <% end %>
                    <%= link_to snippet_path(snippet), method: :delete, data: { "turbo-method": :delete, confirm: "Are you sure?" }, class: "flex items-center px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20" do %>
                      <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                      Delete
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Description -->
            <% if snippet.description.present? %>
              <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
                <%= snippet.description %>
              </p>
            <% end %>

            <!-- Tags -->
            <% if snippet.tags.any? %>
              <div class="flex flex-wrap gap-1 mb-4">
                <% snippet.tags.each do |tag| %>
                  <span class="inline-block px-2 py-1 text-xs rounded-full" style="background-color: <%= tag.color %>20; color: <%= tag.color %>;">
                    <%= tag.name %>
                  </span>
                <% end %>
              </div>
            <% end %>

            <!-- Footer -->
            <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400">
              <span><%= time_ago_in_words(snippet.created_at) %> ago</span>
              <div class="flex space-x-4">
                <%= link_to raw_snippet_path(snippet), class: "hover:text-blue-600 dark:hover:text-blue-400", title: "View Raw" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="flex justify-center">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No snippets</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating your first code snippet.</p>
      <div class="mt-6">
        <%= link_to new_snippet_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Create Snippet
        <% end %>
      </div>
    </div>
  <% end %>
</div>