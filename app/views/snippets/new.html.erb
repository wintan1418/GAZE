<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">Create New Snippet</h1>
    <p class="text-gray-600 dark:text-gray-400">Save your code snippet with syntax highlighting and organization.</p>
  </div>

  <%= form_with model: @snippet, local: true, class: "space-y-6" do |form| %>
    <% if @snippet.errors.any? %>
      <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
        <div class="flex">
          <svg class="w-5 h-5 text-red-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h3 class="text-sm font-medium text-red-800 dark:text-red-200 mb-1">
              <%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:
            </h3>
            <ul class="text-sm text-red-700 dark:text-red-300 list-disc list-inside space-y-1">
              <% @snippet.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <!-- Title -->
        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.text_field :title, 
              placeholder: "Enter snippet title...", 
              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Language -->
        <div>
          <%= form.label :language, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.select :language, 
              language_options_for_select, 
              { prompt: "Select language..." }, 
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
      </div>

      <!-- Description -->
      <div class="mb-6">
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= form.text_area :description, 
            placeholder: "Optional description of your snippet...", 
            rows: 3,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Tags -->
      <div class="mb-6">
        <%= form.label :tag_names, "Tags", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= text_field_tag 'snippet[tag_names]', 
            @snippet.tags.map(&:name).join(', '), 
            placeholder: "Enter tags separated by commas (e.g., javascript, react, hooks)", 
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            data: { controller: "tag-input" } %>
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
          Separate multiple tags with commas. Tags help organize and find your snippets.
        </p>
      </div>

      <!-- Visibility -->
      <div class="mb-6">
        <span class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Visibility</span>
        <div class="space-y-2">
          <div class="flex items-center">
            <%= form.radio_button :visibility, :private_snippet, 
                checked: (@snippet.private? || @snippet.new_record?),
                class: "w-4 h-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600" %>
            <%= form.label :visibility_private_snippet, class: "ml-3 block text-sm text-gray-700 dark:text-gray-300" do %>
              <span class="font-medium">Private</span>
              <span class="block text-gray-500 dark:text-gray-400 text-xs">Only you can see this snippet</span>
            <% end %>
          </div>
          <div class="flex items-center">
            <%= form.radio_button :visibility, :public_snippet, 
                class: "w-4 h-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600" %>
            <%= form.label :visibility_public_snippet, class: "ml-3 block text-sm text-gray-700 dark:text-gray-300" do %>
              <span class="font-medium">Public</span>
              <span class="block text-gray-500 dark:text-gray-400 text-xs">Anyone can view this snippet</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Code Editor -->
    <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="flex space-x-1">
              <div class="w-3 h-3 bg-red-400 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
              <div class="w-3 h-3 bg-green-400 rounded-full"></div>
            </div>
            <%= form.label :code, "Code", class: "text-sm font-medium text-gray-700 dark:text-gray-300" %>
          </div>
          <div class="text-xs text-gray-500 dark:text-gray-400">
            Tab or Ctrl+Enter to indent
          </div>
        </div>
      </div>
      
      <div class="p-0">
        <%= form.text_area :code, 
            placeholder: "Paste your code here...", 
            rows: 20,
            class: "w-full p-6 border-0 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 font-mono text-sm leading-relaxed resize-y focus:ring-0 focus:outline-none",
            data: { controller: "code-editor" } %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center justify-between pt-6">
      <div>
        <%= link_to snippets_path, class: "inline-flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Cancel
        <% end %>
      </div>
      
      <div class="flex items-center space-x-3">
        <%= form.submit "Save as Draft", 
            name: "draft", 
            class: "inline-flex items-center px-4 py-2 bg-gray-600 dark:bg-gray-700 text-white rounded-lg hover:bg-gray-700 dark:hover:bg-gray-600 transition-colors" %>
        <%= form.submit "Create Snippet", 
            class: "inline-flex items-center px-6 py-2 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Create Snippet
        <% end %>
      </div>
    </div>
  <% end %>
</div>