<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-blue-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
  <!-- Header -->
  <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-lg border-b border-gray-200 dark:border-gray-700 sticky top-0 z-40">
    <div class="container mx-auto px-4 py-6">
      <div class="flex items-start justify-between">
        <div class="flex items-start gap-6">
          <!-- Stack Icon -->
          <div class="w-16 h-16 rounded-2xl shadow-lg flex items-center justify-center flex-shrink-0"
               style="background-color: <%= @stack.color %>">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= @stack.name %></h1>
              <span class="px-3 py-1 text-sm font-medium rounded-full
                           <%= @stack.public? ? 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400' 
                                             : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-400' %>">
                <%= @stack.public? ? 'Public' : 'Private' %>
              </span>
            </div>
            
            <% if @stack.description.present? %>
              <p class="text-gray-600 dark:text-gray-400 mb-3"><%= @stack.description %></p>
            <% end %>
            
            <div class="flex items-center gap-6 text-sm text-gray-500 dark:text-gray-400">
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
                <span><%= pluralize(@stack.snippets.count, 'snippet') %></span>
              </div>
              
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span>by <%= @stack.user.username %></span>
              </div>
              
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Created <%= time_ago_in_words(@stack.created_at) %> ago</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="flex items-center gap-3">
          <%= link_to edit_stack_path(@stack), 
              class: "inline-flex items-center gap-2 px-4 py-2 bg-gray-100 dark:bg-gray-700 
                     text-gray-700 dark:text-gray-300 font-medium rounded-xl 
                     hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit Stack
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 py-8">
    <!-- Add Snippet Button -->
    <div class="mb-8">
      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Add snippets to this stack</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Organize your code snippets into this collection</p>
          </div>
          
          <% if current_user.snippets.where.not(id: @stack.snippet_ids).exists? %>
            <div class="relative" data-controller="dropdown">
              <button type="button" 
                      data-action="click->dropdown#toggle"
                      class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 
                             text-white font-medium rounded-xl shadow-lg hover:shadow-xl 
                             transform hover:-translate-y-0.5 transition-all duration-200">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Add Snippet
              </button>
              
              <div data-dropdown-target="menu"
                   class="hidden absolute right-0 mt-2 w-80 bg-white dark:bg-gray-800 rounded-xl 
                          shadow-xl border border-gray-200 dark:border-gray-700 z-50 max-h-80 overflow-y-auto">
                <div class="p-3 border-b border-gray-200 dark:border-gray-700">
                  <p class="text-sm font-medium text-gray-700 dark:text-gray-300">Select a snippet to add</p>
                </div>
                <div class="p-2">
                  <% current_user.snippets.where.not(id: @stack.snippet_ids).recent.limit(20).each do |snippet| %>
                    <%= form_with url: add_snippet_stack_path(@stack), method: :post, local: true, 
                        class: "block" do |f| %>
                      <%= f.hidden_field :snippet_id, value: snippet.id %>
                      <%= f.submit snippet.title, 
                          class: "w-full text-left px-3 py-2 text-sm text-gray-700 dark:text-gray-300 
                                 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors cursor-pointer" %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% else %>
            <p class="text-sm text-gray-500 dark:text-gray-400">All your snippets are already in this stack</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Snippets -->
    <% if @snippets.any? %>
      <div class="space-y-6">
        <% @snippets.each do |snippet| %>
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-lg transition-all duration-200">
            <!-- Snippet Header -->
            <div class="p-6 pb-4">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                    <%= link_to snippet.title, snippet_path(snippet), 
                        class: "hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200" %>
                  </h3>
                  
                  <% if snippet.description.present? %>
                    <p class="text-gray-600 dark:text-gray-300 mb-4 leading-relaxed">
                      <%= truncate(snippet.description, length: 150) %>
                    </p>
                  <% end %>
                  
                  <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
                    <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full">
                      <%= snippet.language %>
                    </span>
                    
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                      <%= snippet.view_count %> views
                    </div>
                    
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                      </svg>
                      <%= snippet.copy_count %> copies
                    </div>
                  </div>
                </div>
                
                <!-- Remove Button -->
                <%= link_to remove_snippet_stack_path(@stack, snippet_id: snippet.id), 
                    method: :delete,
                    data: { confirm: "Remove this snippet from the stack?" },
                    class: "p-2 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 
                           rounded-lg transition-colors" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                <% end %>
              </div>
            </div>
            
            <!-- Code Preview -->
            <div class="px-6 pb-6">
              <div class="bg-gray-50 dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
                <%= syntax_highlighted_code(snippet.code, snippet.language, truncate: 200) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <% if respond_to?(:pagy_nav) %>
        <div class="mt-12">
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="w-24 h-24 mx-auto bg-gradient-to-br from-gray-100 to-gray-200 
                    dark:from-gray-700 dark:to-gray-800 rounded-full 
                    flex items-center justify-center mb-6">
          <svg class="w-12 h-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
        </div>
        
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
          No snippets in this stack yet
        </h3>
        
        <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-md mx-auto">
          Add your code snippets to this stack to keep them organized.
        </p>
        
        <% if current_user.snippets.any? %>
          <%= link_to "Create New Snippet", new_snippet_path, 
              class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 
                     text-white font-medium rounded-xl shadow-lg hover:shadow-xl 
                     transform hover:-translate-y-0.5 transition-all duration-200" %>
        <% else %>
          <%= link_to "Create Your First Snippet", new_snippet_path, 
              class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 
                     text-white font-medium rounded-xl shadow-lg hover:shadow-xl 
                     transform hover:-translate-y-0.5 transition-all duration-200" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>