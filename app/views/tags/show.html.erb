<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="flex items-start justify-between mb-8">
    <div class="flex-1 min-w-0">
      <div class="flex items-center space-x-4 mb-4">
        <!-- Tag Color -->
        <div class="w-12 h-12 rounded-full border-2 border-gray-200 dark:border-gray-600 flex-shrink-0" style="background-color: <%= @tag.color %>"></div>
        
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
            #<%= @tag.name %>
          </h1>
          <div class="flex items-center space-x-3 mt-2">
            <span class="text-sm text-gray-600 dark:text-gray-400">
              <%= pluralize(@tag.snippets.count, 'snippet') %>
            </span>
            <span class="text-sm text-gray-500 dark:text-gray-400">
              Created <%= time_ago_in_words(@tag.created_at) %> ago
            </span>
          </div>
        </div>
      </div>
    </div>
    
    <% if @tag.user == current_user %>
      <div class="flex items-center space-x-2 ml-4">
        <!-- Edit Tag -->
        <%= link_to edit_tag_path(@tag), class: "inline-flex items-center px-3 py-2 bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit Tag
        <% end %>
        
        <!-- More Actions -->
        <div class="relative" data-controller="dropdown">
          <button data-action="click->dropdown#toggle" class="p-2 rounded-md text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
            </svg>
          </button>
          
          <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-50">
            <div class="py-1">
              <%= link_to tag_path(@tag, format: :json), class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700", target: "_blank" do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2v0a2 2 0 01-2-2v-5H8z"></path>
                </svg>
                Export as JSON
              <% end %>
              <%= link_to tag_path(@tag), method: :delete, data: { "turbo-method": :delete, confirm: "Are you sure you want to delete this tag? This will remove it from all snippets." }, class: "flex items-center px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20" do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Tag
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Tag Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-2xl font-bold text-gray-900 dark:text-gray-100"><%= @tag.snippets.count %></p>
          <p class="text-sm text-gray-600 dark:text-gray-400">Total Snippets</p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-2xl font-bold text-gray-900 dark:text-gray-100"><%= @tag.snippets.where(visibility: :public_snippet).count %></p>
          <p class="text-sm text-gray-600 dark:text-gray-400">Public Snippets</p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-2xl font-bold text-gray-900 dark:text-gray-100">
            <%= @tag.snippets.group(:language).count.keys.count %>
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-400">Languages Used</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Language Distribution -->
  <% if @tag.snippets.any? %>
    <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 p-6 mb-8">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Language Distribution</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
        <% @tag.snippets.group(:language).count.sort_by { |_, count| -count }.each do |language, count| %>
          <div class="text-center">
            <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-3 mb-2">
              <div class="text-lg font-bold text-gray-900 dark:text-gray-100"><%= count %></div>
              <div class="text-xs text-gray-600 dark:text-gray-400"><%= language.capitalize %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Tagged Snippets -->
  <% if @tag.snippets.any? %>
    <div class="space-y-4">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
          Snippets with this tag
        </h2>
        
        <!-- Filter Options -->
        <div class="flex items-center space-x-2">
          <%= link_to tag_path(@tag), class: "px-3 py-1 text-sm rounded-md #{'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400' if params[:filter].blank?} #{'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800' unless params[:filter].blank?}" do %>
            All
          <% end %>
          <%= link_to tag_path(@tag, filter: 'public'), class: "px-3 py-1 text-sm rounded-md #{'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400' if params[:filter] == 'public'} #{'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800' unless params[:filter] == 'public'}" do %>
            Public Only
          <% end %>
        </div>
      </div>
      
      <div class="space-y-4">
        <% filtered_snippets = params[:filter] == 'public' ? @tag.snippets.where(visibility: :public_snippet) : @tag.snippets %>
        <% filtered_snippets.includes(:user, :tags).recent.each do |snippet| %>
          <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 hover:shadow-md dark:hover:shadow-gray-800/20 transition-all">
            <div class="p-6">
              <div class="flex items-start justify-between">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center space-x-3 mb-2">
                    <%= link_to snippet, class: "text-lg font-semibold text-gray-900 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors" do %>
                      <%= snippet.title %>
                    <% end %>
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-300">
                      <%= snippet.language %>
                    </span>
                    <% if snippet.public? %>
                      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400">
                        Public
                      </span>
                    <% end %>
                  </div>
                  
                  <% if snippet.description.present? %>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">
                      <%= snippet.description %>
                    </p>
                  <% end %>
                  
                  <!-- Other Tags -->
                  <% other_tags = snippet.tags.where.not(id: @tag.id) %>
                  <% if other_tags.any? %>
                    <div class="flex flex-wrap gap-1 mb-3">
                      <span class="text-xs text-gray-500 dark:text-gray-400 mr-2">Also tagged:</span>
                      <% other_tags.limit(5).each do |tag| %>
                        <%= link_to tag, class: "inline-flex items-center px-2 py-1 rounded text-xs font-medium hover:opacity-80 transition-colors", style: "background-color: #{tag.color}20; color: #{tag.color};" do %>
                          #<%= tag.name %>
                        <% end %>
                      <% end %>
                      <% if other_tags.count > 5 %>
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400">
                          +<%= other_tags.count - 5 %> more
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                  
                  <!-- Code Preview -->
                  <div class="bg-gray-50 dark:bg-gray-800 rounded-md p-3 mt-3">
                    <pre class="text-sm text-gray-700 dark:text-gray-300 overflow-hidden" style="white-space: pre-wrap; word-wrap: break-word; max-height: 100px; overflow-y: hidden;"><%= snippet.code.lines.first(4).join.strip %><% if snippet.code.lines.count > 4 %>

...</<% end %></pre>
                  </div>
                </div>
                
                <div class="flex items-center space-x-2 ml-4">
                  <%= link_to snippet, class: "inline-flex items-center px-3 py-1.5 text-sm bg-blue-600 dark:bg-blue-500 text-white rounded-md hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors" do %>
                    View
                  <% end %>
                </div>
              </div>
              
              <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400 mt-4 pt-4 border-t border-gray-100 dark:border-gray-800">
                <div class="flex items-center space-x-3">
                  <span>by <%= snippet.user.name || snippet.user.username || snippet.user.email.split('@').first %></span>
                  <span>•</span>
                  <span><%= time_ago_in_words(snippet.created_at) %> ago</span>
                </div>
                <div class="text-gray-400 dark:text-gray-500">
                  <%= snippet.code.length %> chars
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-16">
      <div class="w-24 h-24 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">No snippets with this tag</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-6">Start organizing your code by tagging your snippets.</p>
      
      <%= link_to snippets_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors" do %>
        Browse Snippets
      <% end %>
    </div>
  <% end %>

  <!-- Back to Tags -->
  <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800">
    <div class="flex items-center justify-between">
      <div class="text-sm text-gray-500 dark:text-gray-400">
        Tag created <%= @tag.created_at.strftime("%B %d, %Y") %>
        <% if @tag.updated_at != @tag.created_at %>
          • Updated <%= time_ago_in_words(@tag.updated_at) %> ago
        <% end %>
      </div>
      
      <%= link_to tags_path, class: "inline-flex items-center text-sm text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Tags
      <% end %>
    </div>
  </div>
</div>